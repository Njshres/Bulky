<div class="container">
<div class="row pt-4 pb-3">
    <div class="col-6 text-primary">
        <h4>Category List</h4>
    </div>
    <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-file-plus"></i>Create New Category</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DispalyOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DispalyOrder)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="bi bi-pen"></i>Edit
                        </a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="bi bi-three-dots-vertical"></i>Details
                        </a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="bi bi-archive"></i>Delete
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
